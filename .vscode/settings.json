{
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "search.exclude": {
    "**/dist*": true,
    "**/node_modules*": true,
    "package-lock.json": true,
    "yarn.lock": true
  }
}
